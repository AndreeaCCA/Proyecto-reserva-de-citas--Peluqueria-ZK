<!-- CUERPO DEL PROYECTO -->
<main>
  <!-- HTML Form (wrapped in a .bootstrap-iso div) -->
  <div class="bootstrap-iso">
    <div class="container-fluid">
      <h3 class="cita">Â¡Anular tus citas!</h3>
      <div class="row">
        <div class="col-md-5 col-sm-12 col-xs-12">
          {{#if mensaje}}
          <div class="alert alert-success" role="alert">
            {{mensaje}}
          </div>
          {{/if}}
          <form method="post" action="/appointment/cancel">
            <div class="form-group">
              <label class="control-label requiredField" for="email">Email: <span class="asteriskField">
                  *</span></label>
              <input class="form-control" id="email" name="email" type="text" {{!-- autocomplete="off" --}}{{!--
                required --}} />
            </div>
            <div class="form-group">
              <div>
                <button class="btn btn-dark " name="submit" type="submit" value="Ecriptar mensaje">Anular cita</button>
              </div>
            </div>
          </form>
          <p><span class="asteriskField">
              * Campo obligatorio
            </span>
          </p>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6 col-sm-12 col-xs-12">
          {{#each citas}}
          <div class="alert alert-secondary" role="alert">
            <div class="row">
              <div class="col-md-6 col-sm-12 col-xs-12">
                <ul style="list-style-type: none">
                  <li>Nombre: {{name}}</li>
                  <li>Email: {{email}}</li>
                  <li>Tel: {{tel}}</li>
                  <li>Fecha: {{date_cita}}</li>
                  <li>Hora: {{hour_cita}}</li>
                  <li>Id: {{id}}</li>
                </ul>
                <p>
                  <a  id="borrar" href="/appointment/delete_1/{{id}}" style="color:rgb(46, 44, 44); text-align:center"><i
                      class="far fa-trash-alt"></i></a>
                  {{!-- <a  href="/change_1/{{id}}" style="color: rgb(46, 44, 44); text-align:center"><i
                      class="far fa-edit"></i></a> --}}
                </p>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</main>
 <script src="/js/delete.js"></script>